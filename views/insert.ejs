<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Insert</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>

<div class="container container_insert">
    <nav>
        <div class="logo">
            <img src="/Images/i_icon.png"/>
        </div>

        <ul class="list-item">
            <li><a href="/">Home</a></li>
            <li><a href="/about">About</a></li>
            <li><a href="/team">Team</a></li>
        </ul>
    </nav>

    <div class="tables_list">
        <label for="tables">Choose a table :</label>
        <select id="tables" name="tableList" form="tableForm">
            <option>Course</option>
            <option>Credit_Combination
            <option>Department</option>
            <option>Faculty</option>
            <option>Inventory</option>
            <option>Non_Teaching_Staff</option>
            <option>Staff</option>
            <option>Staff_Qualification</option>
            <option>Student</option>
            <option>Student_Contact_No</option>
            <option>Student_SPI</option>
            <option>Studies</option>
            <option>Teaches</option>
        </select>
        <form method="post" action="/insert" id="tableForm">
            <input type="submit" class="showBtn">
        </form>
    </div>

    <% if (temp.length !== 0) { %>
    <h1>Enter the <%= temp %> information below</h1>
    <div class="insert_form">
        <label for="insertForm"></label>
        <form class="insertForm" action='<%= '/insert/table?name=' + temp%>'  method="POST" id="insertForm">
            <% for (let i = 0; i < columns.length; i ++) { %>
            <div>
                <label for='<%= columns[i].name%>'></label>
                <% if (columns[i].name === 'DOB' || columns[i].name.toLowerCase() === 'purchase_data') { %>
                    <input type="date" name='<%= columns[i].name%>' placeholder='<%=columns[i].name%>'>
                <%} else if (columns[i].name === 'Sex') {  %>
                    <label for="genderSelect"></label>
                    <select id="genderSelect" name='<%= columns[i].name%>' form="insertForm">
                        <option>Sex</option>
                        <option>M</option>
                        <option>F</option>
                        <option>T</option>
                    </select>
                <% } else { %>
                    <input type="text" name='<%= columns[i].name%>' placeholder='<%=columns[i].name%>'>
                <% } %>
            </div>
<!--            <br>-->
            <% } %>
<!--                <br>-->
                <div class="insert_btn">
                    <input type="submit" class="insert_form_submit">
                </div>
        </form>
    </div>
    <% } %>

</div>
</body>
</html>